---
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
}

const { 
	title = 'Ositos Sorpresas - Experiencias Mágicas para Niños y Familias',
	description = 'Creamos momentos inolvidables con sorpresas personalizadas, personajes y regalos especiales para niños, familias y parejas. ¡Haz que cada celebración sea única!'
} = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&family=Fredoka:wght@300..700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="font-quicksand bg-white">
		<slot />
	</body>
</html>

<style is:global>
	.font-quicksand {
		font-family: 'Quicksand', sans-serif;
	}
	.font-fredoka {
		font-family: 'Fredoka', sans-serif;
	}
</style>
